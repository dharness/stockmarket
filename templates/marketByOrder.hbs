<!--Market By Order-->
<div class="medium-5 columns">
    <p style="text-align: center;"> {{companyName}}<p>

    <div class="medium-6 columns" style="margin-right:0px;">
        <table id="market-by-order" width="100%">
            <thead>
            <tr>
                <th style="text-align: center;" colspan="2">Buy</th>
            </tr>
            <tr>
                <th style="text-align: center;">Volume</th>
                <th style="text-align: center;">Price</th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="medium-6 columns">
        <table id="market-by-order" width="100%" style="float:left;">
            <thead>
            <tr>
                <th style="text-align: center;" colspan="2">Sell</th>
            </tr>
            <tr>
                <th style="text-align: center;">Volume</th>
                <th style="text-align: center;">Price</th>
            </tr>
            </thead>
        </table>
    </div>
    <div class="medium-6 columns" style="margin-left:0px;">
        <div class='market-table' margin-top="0px">
            <table width="100%" id='stock-market-summary'>
                <tbody style="text-align: center;">
                {{#each buyOrder in buyOrders}}
                    <tr>
                        <td style="text-align: center;">{{buyOrder.volume}}</td>
                        <td style="text-align: center;">{{buyOrder.price}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="medium-6 columns">
        <div class='market-table'>
            <table width="100%" id='stock-market-summary '>
                <tbody style="text-align: center;">
                {{#each sellOrder in sellOrders}}
                    <tr>
                        <td style="text-align: center;">{{sellOrder.volume}}</td>
                        <td style="text-align: center;">{{sellOrder.price}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        </table>
    </div>
</div>
</div>